@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Validaciones de Formulario</h1>

</div>
<form class="row g-3 mt-2" method="post">
    <div class="form-group row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Person.Name" class="form-label">Nombre de la persona </label>
                <input asp-for="Person.Name" class="form-control" />
                <span asp-validation-for="Person.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Age" class="form-label">Edad de la persona </label>
                <input asp-for="Person.Age" class="form-control" />
                <span asp-validation-for="Person.Age" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
            <button class="btn btn-outline-primary" type="submit">Procesar</button>
            </div>
        </div>
    </div>
</form>

@if (Request.Method == "POST")
{
    <h3>@Model.Message</h3>
}
