@page
@model EjemploOracle.Razor.Pages.Categoria.CategoriaListaModel
@{
}
<div class="container">
    <H1> LISTA DE CATEGORIAS</H1> <br />
    <a class="btn btn-success btn-sm" asp-area="" asp-page="/Categoria/CategoriaInsert">Agregar Categoria</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <TH>NOMBRE</TH>
                <th>OPCIONES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.liCategoria)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>
                       <!-- <form method="post">
                            <hidden asp-for="@item.Id">@item.Id</hidden>
                             <button type="submit" class="btn btn-dark">editar</button>

                         </form> -->
                       <a asp-route-idCategoria="@item.Id" asp-page="/Categoria/CategoriaUpdate" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-route-idCategoria="@item.Id" asp-page="/Categoria/CategoriaDelete" class="btn btn-danger btn-sm">Eliminar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

