                <button type="submit" class="btn btn-secondary">Modificar</button>
                <a class="btn btn-danger" asp-area="" asp-page="/Categoria/CategoriaLista">Cancelar</a>
                
        </div>
    </div>
       
</div>
</form>
@{
    var idcategoria = Request.Query["idCategoria"];
}
