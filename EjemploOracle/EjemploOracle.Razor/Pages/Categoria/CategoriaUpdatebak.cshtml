@{
}
<form method="post">
<div class="row g-3">
    <div class="form-group row">
        <div class="col-4">
                
                <label asp-for="Nombre" class="form-label">Nombre de la Categoria</label>
                <input type="text" class="form-control" asp-for="Nombre" value="@Model.Nombre" />
