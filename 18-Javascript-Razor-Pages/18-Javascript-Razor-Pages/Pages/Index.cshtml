@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">JavaScript Razor Page</h1>
</div>
<div class="container-fluid">
<button class="btn btn-primary" id="btnSaludar">Saludar</button>
<button class="btn btn-secondary" onclick="hello()">Salu2</button>
</div>

@section Scripts{
    <script>
        let name = '@Model.Name';
        const button = document.getElementById("btnSaludar");
        button.addEventListener("click", function(){
            alert("Hola " + name);
        });

        function hello(){
            alert("Hola " + name)
        }
    </script>
}